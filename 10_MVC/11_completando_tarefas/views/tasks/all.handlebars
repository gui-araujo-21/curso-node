<h1>Todas as Tasks</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
            {{#if this.done}}
                <a href="/" class="title checked">{{this.title}}</a>
            {{else}}
                <a href="/" class="title">{{this.title}}</a>
            {{/if}}
            <div class="actions">
                <form action="/tasks/completed" method="POST">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>
                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
                <form action="/tasks/remove" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit"><i class="bi bi-x-lg"></i></button>
                </form>
            </div>
        </li>
    {{/each}}   
</ul>